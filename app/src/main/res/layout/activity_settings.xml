<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EFB3FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#EFB3FA"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:context=".SettingsActivity"
        tools:ignore="ExtraText">

        //Settings title
        <TextView
            android:id="@+id/textView2"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        //"Predators number:" textview
        <TextView
            android:id="@+id/textView3"

            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:layout_width="170dp"
            android:text="@string/predators_number"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="82dp" />

        //Predators number getter
        <EditText
            android:ems="10"

            android:id="@+id/editText"
            android:inputType="numberDecimal"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_width="0dp"

            android:text="@string/_5"

            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/PrNumBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

        //Submit predators number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/PrNumBtn"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="72dp"
            android:text="@string/submit"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        //"Herbivores number:" text
        <TextView
            android:id="@+id/textView4"

            android:layout_height="40dp"
            android:layout_width="180dp"
            android:text="@string/herbivores_number"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"

            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="125dp" />

        //Herbivores number getter
        <EditText
            android:ems="10"

            android:id="@+id/editText2"
            android:inputType="numberDecimal"
            android:layout_height="40dp"
            android:layout_width="0dp"

            android:text="@string/_5"

            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/HeNumBtn"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="109dp"
            tools:ignore="Autofill,LabelFor" />

        //Submit herbivores number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/HeNumBtn"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_width="72dp"
            android:text="@string/submit"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/PrNumBtn"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="110dp" />

        //"Velocity/Efficiency:" text
        <TextView
            android:id="@+id/textView5"
            android:layout_height="40dp"
            android:layout_width="180dp"
            android:text="@string/velocity_efficiency"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="159dp" />

        //Velocity/Efficiency getter
        <EditText
            android:ems="10"

            android:id="@+id/editText3"
            android:inputType="numberDecimal"
            android:layout_height="40dp"
            android:layout_width="0dp"

            android:text="@string/_1_0"

            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/VEBtn"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            tools:ignore="Autofill,LabelFor" />

        //Submit Velocity/Efficiency
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/VEBtn"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_width="72dp"
            android:text="@string/submit"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/HeNumBtn"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="150dp" />

        //"Points for plant:" text
        <TextView
            android:id="@+id/textView6"
            android:layout_height="40dp"
            android:layout_width="180dp"
            android:text="@string/plants_number"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="159dp" />

        //Points for plant getter
        <EditText
            android:ems="10"

            android:id="@+id/editText4"
            android:inputType="numberDecimal"
            android:layout_height="40dp"
            android:layout_width="0dp"

            android:text="@string/_20"

            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/PlNumBtn"
            app:layout_constraintTop_toBottomOf="@+id/editText3"
            tools:ignore="Autofill,LabelFor" />

        //Submit plants number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/PlNumBtn"
            android:layout_height="40dp"
            android:layout_width="72dp"
            android:layout_marginStart="20dp"
            android:text="@string/submit"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/VEBtn"

            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="150dp" />

        //Цвет растений
        <Button
            android:id="@+id/PlColorBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:text="@string/set_plants_color"/>
        <View
            android:id="@+id/PlView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/PlColorBtn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>
        //Цвет травоядных
        <Button
            android:id="@+id/HeColorBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/PlColorBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:text="@string/set_herbivores_color"/>
        <View
            android:id="@+id/HeView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/HeColorBtn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>
        //Цвет хищников
        <Button
            android:id="@+id/PrColorBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/HeColorBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:text="@string/set_predators_color"/>
        <View
            android:id="@+id/PrView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/PrColorBtn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

        //"Field size:" text
        <TextView
            android:id="@+id/FSize"
            android:layout_height="40dp"
            android:layout_width="180dp"
            android:layout_marginTop="4dp"
            android:text="@string/field_size"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PrColorBtn"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="159dp" />

        //Field size getter
        <EditText
            android:ems="10"

            android:id="@+id/editFSize"
            android:inputType="numberDecimal"
            android:layout_height="40dp"
            android:layout_width="0dp"

            android:text="@string/_100"

            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/FSize"
            app:layout_constraintEnd_toStartOf="@+id/FSizeBtn"
            app:layout_constraintTop_toBottomOf="@+id/PrColorBtn"
            tools:ignore="Autofill,LabelFor" />

        //Submit field size
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/FSizeBtn"
            android:layout_height="40dp"
            android:layout_width="72dp"
            android:layout_marginStart="20dp"
            android:text="@string/submit"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/PrColorBtn"

            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="150dp" />



        //Back button
        <Button
            android:id="@+id/BackBtn1"

            android:layout_height="60dp"
            android:layout_width="123dp"
            android:layout_marginBottom="7dp"

            android:layout_marginStart="7dp"
            android:layout_marginTop="30dp"
            android:text="@string/back"
            app:layout_constraintTop_toBottomOf="@id/PrColorBtn"

            app:layout_constraintStart_toStartOf="parent"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="680dp" />

        <Button
            android:id="@+id/AcceptBtn1"
            android:layout_width="123dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@id/BackBtn1"
            app:layout_constraintTop_toTopOf="@id/BackBtn1"
            android:layout_marginStart="10dp"
            android:text="@string/restart_with_new_settings"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>