<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    //Back button
    <Button
        android:id="@+id/BackBtn1"

        android:layout_width="101sp"
        android:layout_height="37sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="7sp"
        android:layout_marginStart="7sp"

        android:text="Back"

        tools:layout_editor_absoluteX="16sp"
        tools:layout_editor_absoluteY="680sp" />

    //Settings title

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"

        android:text="SETTINGS"

        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp" />

    //"Predators number:" textview
    <TextView
        android:id="@+id/textView3"
        android:layout_width="170sp"
        android:layout_height="40sp"

        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18sp"

        android:text="Predators number:"

        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="82sp" />

    //Predators number getter

    <EditText
        android:id="@+id/editText"

        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginTop="14sp"
        android:layout_marginStart="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        android:text="5"

        android:ems="10"
        android:inputType="textPersonName" />

    //"Herbivores number:" text
    <TextView
        android:id="@+id/textView4"

        android:layout_width="180sp"
        android:layout_height="40sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"

        android:text="Herbivores number:"

        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="125sp" />

    //"Velocity/Efficiency:" text
    <TextView
        android:id="@+id/textView5"
        android:layout_width="180sp"
        android:layout_height="40sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"

        android:text="Velocity/Efficiency:"

        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"

        tools:layout_editor_absoluteX="12sp"
        tools:layout_editor_absoluteY="159sp" />

    //Herbivores number getter
    <EditText
        android:id="@+id/editText2"

        android:layout_width="60sp"
        android:layout_height="40sp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/editText"

        android:text="5"

        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="156sp"
        tools:layout_editor_absoluteY="109sp" />

    //Velocity/Efficiency getter

    <EditText
        android:id="@+id/editText3"

        android:layout_width="60sp"
        android:layout_height="40sp"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="1.0"

        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/PNBtn"

        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"

        android:text="Submit"

        tools:layout_editor_absoluteX="279sp"
        tools:layout_editor_absoluteY="66sp" />

    <Button
        android:id="@+id/HNBtn"

        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/PNBtn"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"

        android:text="Submit"

        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/VEBtn"

        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/HNBtn"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"

        android:text="Submit"

        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>