<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#EFB3FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#EFB3FA"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:context=".SettingsActivity">

        //Settings title
        <TextView
            android:id="@+id/textView2"

            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:text="SETTINGS"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        //"Predators number:" textview
        <TextView
            android:id="@+id/textView3"

            android:layout_height="40sp"
            android:layout_marginTop="18sp"
            android:layout_width="170sp"
            android:text="Predators number:"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="10sp"
            tools:layout_editor_absoluteY="82sp" />

        //Predators number getter
        <EditText
            android:ems="10"

            android:id="@+id/editText"
            android:inputType="numberDecimal"
            android:layout_height="40sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="14sp"
            android:layout_width="60sp"

            android:text="5"

            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        //Submit predators number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/PrNumBtn"
            android:layout_height="40sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:layout_width="80sp"
            android:text="Submit"

            app:layout_constraintStart_toEndOf="@+id/editText"

            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        //"Herbivores number:" text
        <TextView
            android:id="@+id/textView4"

            android:layout_height="40sp"
            android:layout_width="180sp"
            android:text="Herbivores number:"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"

            tools:layout_editor_absoluteX="10sp"
            tools:layout_editor_absoluteY="125sp" />

        //Herbivores number getter
        <EditText
            android:ems="10"

            android:id="@+id/editText2"
            android:inputType="numberDecimal"
            android:layout_height="40sp"
            android:layout_width="60sp"

            android:text="5"

            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:layout_editor_absoluteX="156sp"
            tools:layout_editor_absoluteY="109sp" />

        //Submit herbivores number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/HNBtn"
            android:layout_height="40sp"
            android:layout_marginStart="20sp"
            android:layout_width="80sp"
            android:text="Submit"

            app:layout_constraintStart_toEndOf="@+id/editText"

            app:layout_constraintTop_toBottomOf="@+id/PrNumBtn"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="110dp" />

        //"Velocity/Efficiency:" text
        <TextView
            android:id="@+id/textView5"
            android:layout_height="40sp"
            android:layout_width="180sp"
            android:text="Velocity/Efficiency:"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layout_editor_absoluteX="12sp"
            tools:layout_editor_absoluteY="159sp" />

        //Velocity/Efficiency getter
        <EditText
            android:ems="10"

            android:id="@+id/editText3"
            android:inputType="numberDecimal"
            android:layout_height="40sp"
            android:layout_width="60sp"

            android:text="1.0"

            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        //Submit Velocity/Efficiency
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/VEBtn"
            android:layout_height="40sp"
            android:layout_marginStart="20sp"
            android:layout_width="80sp"
            android:text="Submit"

            app:layout_constraintStart_toEndOf="@+id/editText"

            app:layout_constraintTop_toBottomOf="@+id/HNBtn"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="150dp" />

        //"Points for plant:" text
        <TextView
            android:id="@+id/textView6"
            android:layout_height="40sp"
            android:layout_width="180sp"
            android:text="Plants number:"
            android:textColor="@color/cardview_dark_background"

            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="12sp"
            tools:layout_editor_absoluteY="159sp" />

        //Points for plant getter
        <EditText
            android:ems="10"

            android:id="@+id/editText4"
            android:inputType="numberDecimal"
            android:layout_height="40sp"
            android:layout_width="60sp"

            android:text="20"

            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText3" />

        //Submit plants number
        <Button
            android:backgroundTint="#9CABFF"

            android:id="@+id/PlNumBtn"
            android:layout_height="40sp"
            android:layout_width="80sp"
            android:layout_marginStart="20sp"
            android:text="Submit"
            app:layout_constraintStart_toEndOf="@+id/editText"

            app:layout_constraintTop_toBottomOf="@+id/VEBtn"

            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="150dp" />

        //Цвет растений
        <Button
            android:id="@+id/PlColorBtn"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Set plants color"/>
        //Цвет травоядных
        <Button
            android:id="@+id/HeColorBtn"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            app:layout_constraintTop_toBottomOf="@+id/PlColorBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Set plants color"/>
        //Цвет хищников
        <Button
            android:id="@+id/PrColorBtn"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            app:layout_constraintTop_toBottomOf="@+id/HeColorBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Set predators color"/>

        //Back button
        <Button
            android:id="@+id/BackBtn1"

            android:layout_height="60sp"
            android:layout_marginBottom="7sp"

            android:layout_marginStart="7sp"
            android:layout_marginTop="30sp"
            android:layout_width="120sp"
            android:text="Back"
            app:layout_constraintTop_toBottomOf="@id/PrColorBtn"

            app:layout_constraintStart_toStartOf="parent"

            tools:layout_editor_absoluteX="16sp"
            tools:layout_editor_absoluteY="680sp" />

        <Button
            android:id="@+id/AcceptBtn1"
            android:layout_width="120sp"
            android:layout_height="60sp"
            app:layout_constraintStart_toEndOf="@id/BackBtn1"
            app:layout_constraintTop_toTopOf="@id/BackBtn1"
            android:layout_marginStart="10sp"
            android:text="Restart with new settings"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>