<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFB3FA"
    tools:context=".SettingsActivity">

    //Back button

    <Button
        android:id="@+id/BackBtn1"

        android:layout_width="101sp"
        android:layout_height="37sp"

        android:layout_marginStart="7sp"
        android:layout_marginBottom="7sp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteX="16sp"
        tools:layout_editor_absoluteY="680sp" />

    //Settings title

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="SETTINGS"

        android:textSize="20sp"
        android:textColor="@color/design_default_color_secondary_variant" />

    //"Predators number:" textview

    <TextView
        android:id="@+id/textView3"

        android:layout_width="170sp"
        android:layout_height="40sp"
        android:layout_marginTop="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        android:text="Predators number:"

        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="82sp" />

    //Predators number getter

    <EditText
        android:id="@+id/editText"

        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        android:text="5"

        android:textSize="20sp"
        android:inputType="numberDecimal"
        android:ems="10"/>

    //Submit predators number
    <Button
        android:id="@+id/PNBtn"

        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="15sp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        android:text="Submit"

        android:backgroundTint="#9CABFF"/>

    //"Herbivores number:" text
    <TextView
        android:id="@+id/textView4"

        android:layout_width="180sp"
        android:layout_height="40sp"
        android:text="Herbivores number:"
        android:textColor="@color/cardview_dark_background"

        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"

        tools:layout_editor_absoluteX="10sp"
        tools:layout_editor_absoluteY="125sp" />

    //Herbivores number getter
    <EditText
        android:id="@+id/editText2"

        android:layout_width="60sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText"

        android:text="5"

        android:textSize="20sp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="156sp"
        tools:layout_editor_absoluteY="109sp" />

    //Submit herbivores number
    <Button
        android:id="@+id/HNBtn"

        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/PNBtn"

        android:text="Submit"

        android:backgroundTint="#9CABFF"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="110dp" />

    //"Velocity/Efficiency:" text
    <TextView
        android:id="@+id/textView5"
        android:layout_width="180sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"

        android:text="Velocity/Efficiency:"

        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="12sp"
        tools:layout_editor_absoluteY="159sp" />

    //Velocity/Efficiency getter
    <EditText
        android:id="@+id/editText3"

        android:layout_width="60sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText2"

        android:text="1.0"

        android:ems="10"
        android:inputType="numberDecimal"/>

    //Submit Velocity/Efficiency
    <Button
        android:id="@+id/VEBtn"

        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/HNBtn"

        android:text="Submit"

        android:backgroundTint="#9CABFF"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="150dp" />

    //"Points for plant:" text
    <TextView
        android:id="@+id/textView6"
        android:layout_width="180sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"

        android:text="Points for plant:"

        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="12sp"
        tools:layout_editor_absoluteY="159sp" />

    //Points for plant getter
    <EditText
        android:id="@+id/editText4"

        android:layout_width="60sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText3"

        android:text="1.0"

        android:textSize="20sp"
        android:ems="10"
        android:inputType="numberDecimal"/>

    //Submit points for each plant
    <Button
        android:id="@+id/PfPBtn"

        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/VEBtn"
        android:backgroundTint="#9CABFF"

        android:text="Submit"

        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>