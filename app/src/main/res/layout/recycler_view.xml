<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    //Info
    <TextView
        android:id="@+id/tevi"
        android:layout_width="180sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:text="Points for plant:"

        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="12sp"
        tools:layout_editor_absoluteY="159sp" />

    //getter
    <EditText
        android:id="@+id/edte"

        android:layout_width="60sp"
        android:layout_height="40sp"
        app:layout_constraintStart_toEndOf="@+id/tevi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30sp"

        android:text="1.0"

        android:textSize="20sp"
        android:ems="10"
        android:inputType="numberDecimal"/>

    //Submit
    <Button
        android:id="@+id/sbmt"

        android:layout_width="80sp"
        android:layout_height="40sp"

        app:layout_constraintStart_toEndOf="@+id/edte"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#9CABFF"

        android:text="Submit"

        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="150dp" />
</androidx.constraintlayout.widget.ConstraintLayout>