<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#dddddd">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatsActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:text="Stats:"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Quantity of herbivores:"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Average quantity:"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="Quantity of predators:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Average quantity:"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="24sp" />


    <com.androidplot.xy.XYPlot
        android:id="@+id/plot"
        style="@style/APDefacto.Light"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:domainTitle="Time"
        app:rangeTitle="N of herbivore"
        app:title="Quantity of herbivores" />


    <com.androidplot.xy.XYPlot
        android:id="@+id/plot2"
        style="@style/APDefacto.Light"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:domainTitle="Time"
        app:rangeTitle="N of predator"
        app:title="Quantity of predators" />




    <Button
        android:id="@+id/BackBtn2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</LinearLayout>
</ScrollView>